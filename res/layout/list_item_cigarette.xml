<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp" 
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/imageDetailIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/icon_right" />

        <ImageView
            android:id="@+id/imageCigarette"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageCigarette"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imageCigarette"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageCigarette"
            android:layout_alignLeft="@+id/txtName"
            android:layout_toLeftOf="@+id/imageDetailIcon"
            android:textSize="14dp" />

 </RelativeLayout>