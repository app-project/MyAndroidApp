<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.52" >

        <TextView
            android:id="@+id/textItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textItemXh"
            android:layout_below="@+id/textItemXh"
            android:layout_marginTop="18dp"
            android:text="name" />

        <TextView
            android:id="@+id/textItemAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textItemName"
            android:layout_alignBottom="@+id/textItemName"
            android:layout_marginLeft="58dp"
            android:layout_toRightOf="@+id/textItemName"
            android:text="age" />

        <TextView
            android:id="@+id/textItemXh"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:text="xh" />

    </RelativeLayout>

</LinearLayout>